{
  "name": "dottodo",
  "displayName": "DotTODO",
  "description": "make todo based on your folder and check them",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dottodo.init",
        "title": "Initialize DotTODO",
        "category": "DotTODO"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dottodo-sidebar",
          "title": "Dot TODO",
          "icon": "$(tasklist)"
        }
      ]
    },
    "views": {
      "dottodo-sidebar": [
        {
          "id": "dottodo.todos",
          "name": "Todos",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "webpack --mode development --config webpack.config.js",
    "watch:webview": "webpack --mode development --watch --config webpack.config.js",
    "build": "npm run compile && npm run build:webview",
    "dev": "concurrently \"npm run watch\" \"npm run watch:webview\"",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.19.0",
    "prettier": "^3.5.2",
    "process": "^0.11.10",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
